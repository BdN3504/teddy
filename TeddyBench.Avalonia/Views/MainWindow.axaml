<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TeddyBench.Avalonia.ViewModels"
        xmlns:converters="using:TeddyBench.Avalonia.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="TeddyBench.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="TeddyBench - Cross-platform Tonie File Manager"
        Width="1200" Height="800"
        CanResize="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:PathToBitmapConverter x:Key="PathToBitmapConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <Border DockPanel.Dock="Bottom" Background="#2C3E50" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Text or Search Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Foreground="White" VerticalAlignment="Center" IsVisible="{Binding IsSearchActive}">
                        <Run Text="Searching for: "/>
                        <Run Text="{Binding SearchText}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding StatusText}" Foreground="White" VerticalAlignment="Center" IsVisible="{Binding !IsSearchActive}"/>
                </StackPanel>

                <!-- Clear Search Button -->
                <Button Grid.Column="1"
                        Content="âœ• Clear Search"
                        Margin="10,0,0,0"
                        Padding="8,4"
                        Background="#e74c3c"
                        Foreground="White"
                        Command="{Binding ClearSearchCommand}"
                        IsVisible="{Binding IsSearchActive}">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#c0392b"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <ProgressBar Grid.Column="2"
                             Width="200"
                             Height="20"
                             Margin="10,0,0,0"
                             IsIndeterminate="{Binding IsScanning}"
                             IsVisible="{Binding IsScanning}"/>

                <!-- Floating Action Button for Help -->
                <Button Grid.Column="3"
                        Width="40"
                        Height="40"
                        Margin="10,0,0,0"
                        Background="#3498db"
                        CornerRadius="20"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        IsEnabled="{Binding IsNoDialogOpen}"
                        ToolTip.Tip="Help">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#2980b9"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#21618c"/>
                        </Style>
                    </Button.Styles>
                    <Button.Flyout>
                        <MenuFlyout Placement="TopEdgeAlignedRight">
                            <MenuItem Header="_Keyboard Shortcuts" Command="{Binding ShowShortcutsCommand}"/>
                            <Separator/>
                            <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
                        </MenuFlyout>
                    </Button.Flyout>
                    <TextBlock Text="?" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10" IsEnabled="{Binding IsNoDialogOpen}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left-aligned buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <Button Command="{Binding OpenDirectoryCommand}" Content="_Open Directory"/>
                    <Button Command="{Binding AddCustomTonieCommand}" Content="_Add Custom Tonie" IsEnabled="{Binding HasValidDirectory}"/>
                    <Button Command="{Binding DecodeSelectedCommand}" Content="_Decode Selected"/>
                    <Button Command="{Binding ShowInfoCommand}" Content="_Show Info"/>
                    <Button Command="{Binding RefreshCommand}" Content="_Refresh"/>
                    <Button Command="{Binding RemoveAllLiveFlagsCommand}" Content="Remove All _LIVE Flags"/>
                    <Button Command="{Binding OpenTrashcanManagerCommand}" Content="_TRASHCAN Recovery" IsEnabled="{Binding HasValidDirectory}"/>
                </StackPanel>

                <!-- Right-aligned sort dropdown -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="Sort by:" VerticalAlignment="Center" />
                    <ComboBox ItemsSource="{Binding SortOptions}"
                             SelectedItem="{Binding CurrentSortOption}"
                             Width="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayText}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" IsEnabled="{Binding IsNoDialogOpen}">
                <ScrollViewer>
                    <ListBox ItemsSource="{Binding TonieFiles}"
                             SelectedItem="{Binding SelectedFile}"
                             SelectedItems="{Binding SelectedItems}"
                             SelectionMode="Multiple"
                             Background="Transparent"
                             BorderThickness="0"
                             Name="TonieListBox"
                             Focusable="True"
                             SelectionChanged="TonieListBox_SelectionChanged">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="2"
                                        Padding="5"
                                        Margin="5"
                                        ContextRequested="Border_ContextRequested"
                                        DoubleTapped="Border_DoubleTapped">
                                    <Border.Styles>
                                        <Style Selector="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:selected Border">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:selected TextBlock">
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Style>
                                    </Border.Styles>
                                    <!-- Single selection context menu -->
                                    <Border.ContextMenu>
                                        <ContextMenu Name="SingleSelectionContextMenu" Background="White">
                                            <ContextMenu.Styles>
                                                <Style Selector="MenuItem">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </ContextMenu.Styles>
                                            <MenuItem Header="Open player"
                                                      Command="{Binding $parent[Window].DataContext.PlayTonieCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Rename"
                                                      Command="{Binding $parent[Window].DataContext.RenameSelectedTonieCommand}"
                                                      CommandParameter="{Binding}"
                                                      IsVisible="{Binding IsCustomTonie}"/>
                                            <MenuItem Header="Edit Metadata"
                                                      Command="{Binding $parent[Window].DataContext.EditMetadataCommand}"
                                                      CommandParameter="{Binding}"
                                                      IsVisible="{Binding IsCustomTonie}"/>
                                            <MenuItem Header="Assign new UID"
                                                      Command="{Binding $parent[Window].DataContext.AssignNewUidCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Change Audio ID"
                                                      Command="{Binding $parent[Window].DataContext.ChangeAudioIdCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Toggle LIVE Flag"
                                                      Command="{Binding $parent[Window].DataContext.ToggleLiveFlagCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Decode"
                                                      Command="{Binding $parent[Window].DataContext.DecodeTonieCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <MenuItem Header="Show Info"
                                                      Command="{Binding $parent[Window].DataContext.ShowTonieInfoCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Modify Contents"
                                                      Command="{Binding $parent[Window].DataContext.ModifyContentsCommand}"
                                                      CommandParameter="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                      Command="{Binding $parent[Window].DataContext.DeleteSelectedTonieCommand}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <StackPanel Width="120" Spacing="5">
                                        <Border Width="100" Height="100" BorderBrush="#CCCCCC" BorderThickness="1"
                                                CornerRadius="5" Background="White">
                                            <Image Source="{Binding ImagePath, Converter={StaticResource PathToBitmapConverter}}"
                                                   Stretch="UniformToFill"
                                                   IsVisible="{Binding ImagePath, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                        </Border>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   MaxHeight="40"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,10,0,0"
                    IsVisible="{Binding HasSelectedFile}">
                <StackPanel Margin="10" Spacing="8">
                    <TextBlock Text="Selected File Details:" FontWeight="Bold" Margin="0,0,0,5"/>

                    <!-- Containing Folder with Copy Button -->
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Containing Folder:" Width="120" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedFile, Converter={x:Static converters:FileDirectoryConverter.Instance}}"
                                   TextWrapping="NoWrap"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="700"/>
                        <Button Command="{Binding CopyDirectoryPathCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="4"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Copy directory path to clipboard">
                            <PathIcon Data="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"
                                      Width="16"
                                      Height="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Size -->
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Size:" Width="120"/>
                        <TextBlock>
                            <Run Text="{Binding SelectedFile.FilePath, Converter={x:Static converters:FileSizeConverter.Instance}}"/>
                            <Run Text=" KB"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Modified Date -->
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Modified:" Width="120"/>
                        <TextBlock Text="{Binding SelectedFile.FilePath, Converter={x:Static converters:FileModifiedConverter.Instance}}"/>
                    </StackPanel>

                    <!-- File Path (Clickable with Ctrl+Click) -->
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Path:" Width="120" VerticalAlignment="Top"/>
                        <TextBlock Text="{Binding SelectedFile.FilePath}"
                                   TextWrapping="Wrap"
                                   Foreground="#0066cc"
                                   TextDecorations="Underline"
                                   Cursor="Hand"
                                   PointerPressed="FilePath_PointerPressed"
                                   ToolTip.Tip="Ctrl+Click to open containing folder"
                                   MaxWidth="700"/>
                    </StackPanel>

                    <!-- Separator line before detailed info -->
                    <Border Height="1"
                            Background="#CCCCCC"
                            Margin="0,10,10,10"
                            IsVisible="{Binding HasDetailedInfo}"/>

                    <!-- Detailed Tonie Info (shown only after clicking "Show Info") -->
                    <!-- Audio ID with Copy Button -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasDetailedInfo}">
                        <TextBlock Text="Audio ID:" Width="120"/>
                        <TextBlock Text="{Binding CurrentAudioId}" VerticalAlignment="Center"/>
                        <Button Command="{Binding CopyAudioIdCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="4"
                                VerticalAlignment="Center"
                                ToolTip.Tip="Copy Audio ID to clipboard">
                            <PathIcon Data="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"
                                      Width="16"
                                      Height="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Audio Length -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasDetailedInfo}">
                        <TextBlock Text="Audio Length:" Width="120"/>
                        <TextBlock Text="{Binding AudioLength}"/>
                    </StackPanel>

                    <!-- Chapters -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasDetailedInfo}">
                        <TextBlock Text="Chapters:" Width="120"/>
                        <TextBlock Text="{Binding ChaptersCount}"/>
                    </StackPanel>

                    <!-- Hash -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasDetailedInfo}">
                        <TextBlock Text="Hash:" Width="120"/>
                        <TextBlock Text="{Binding FileHash}" FontFamily="Consolas,Courier New,monospace" TextWrapping="Wrap" MaxWidth="700"/>
                    </StackPanel>

                    <!-- Hash Valid -->
                    <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasDetailedInfo}">
                        <TextBlock Text="Hash Valid:" Width="120"/>
                        <TextBlock Text="{Binding HashValid}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>

</Window>
