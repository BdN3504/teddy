<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TeddyBench.Avalonia.Dialogs"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="280"
        x:Class="TeddyBench.Avalonia.Dialogs.RfidInputDialog"
        x:DataType="vm:RfidInputDialogViewModel"
        Title="Enter RFID Tag UID"
        Width="550" Height="280"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <StackPanel Margin="10">
    <TextBlock Text="Enter the RFID UID from your Tonie figurine:"
               Margin="0,0,0,5"
               FontWeight="Bold"/>

    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
      <Run Text="• The prefix is pre-filled (in reverse byte order)"/><LineBreak/>
      <Run Text="• Complete the UID by adding the last 4 characters (e.g., 5104)"/><LineBreak/>
      <Run Text="• You can edit the entire 8-character string if needed"/><LineBreak/>
      <Run Text="• You can read the UID from the RFID tag using an NFC reader"/><LineBreak/>
      <Run Text="• The UID must match the physical figurine for the Toniebox to recognize it"/>
    </TextBlock>

    <TextBox Text="{Binding RfidUid}"
             Watermark="e.g., 0EED5104"
             Margin="0,0,0,10"
             Name="RfidInput"/>

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
      <Button Content="OK"
              Width="80"
              Command="{Binding OkCommand}"
              Click="OnOkClick"
              IsDefault="True"/>
      <Button Content="Cancel"
              Width="80"
              Margin="10,0,0,0"
              Command="{Binding CancelCommand}"
              Click="OnCancelClick"
              IsCancel="True"/>
    </StackPanel>
  </StackPanel>

</Window>
