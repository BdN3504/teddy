<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TeddyBench.Avalonia.Dialogs"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="TeddyBench.Avalonia.Dialogs.ConfirmModifyTonieDialog"
        x:DataType="vm:ConfirmModifyTonieDialogViewModel"
        Title="Warning: Modifying Official Tonie"
        Width="500" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <StackPanel Margin="20">
    <TextBlock Text="⚠️ Warning: Converting Official Tonie to Custom"
               FontWeight="Bold"
               FontSize="14"
               Margin="0,0,0,10"/>

    <TextBlock Text="{Binding Message}"
               Margin="0,0,0,15"
               TextWrapping="Wrap"
               LineHeight="20"/>

    <Border Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="1"
            Padding="10" Margin="0,0,0,15" CornerRadius="5">
      <StackPanel>
        <TextBlock Text="After modification:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#856404"/>
        <TextBlock Text="• The tonie will still work with the same figurine" Margin="0,0,0,3" Foreground="#856404"/>
        <TextBlock Text="• It will no longer appear with original metadata" Margin="0,0,0,3" Foreground="#856404"/>
        <TextBlock Text="• The cached image icon will be lost" Margin="0,0,0,3" Foreground="#856404"/>
        <TextBlock Text="• It will be tracked in customTonies.json instead" Margin="0,0,0,3" Foreground="#856404"/>
      </StackPanel>
    </Border>

    <Border Background="#E8F4F8" BorderBrush="#0288D1" BorderThickness="1"
            Padding="10" Margin="0,0,0,15" CornerRadius="5">
      <StackPanel>
        <TextBlock Text="New Audio ID (Unix timestamp):" FontWeight="Bold" Margin="0,0,0,5" Foreground="#01579B"/>

        <!-- Custom Tonie Toggle -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
          <ToggleSwitch IsChecked="{Binding IsCustomTonie}"
                        OnContent="Custom Tonie"
                        OffContent="Custom Tonie"
                        Margin="0,0,10,0"/>
          <TextBlock Text="(Apply -0x50000000 offset)"
                     VerticalAlignment="Center"
                     FontSize="11"
                     Foreground="#01579B"
                     IsVisible="{Binding IsCustomTonie}"/>
          <TextBlock Text="(Use timestamp as-is)"
                     VerticalAlignment="Center"
                     FontSize="11"
                     Foreground="#01579B"
                     IsVisible="{Binding !IsCustomTonie}"/>
        </StackPanel>

        <TextBox Text="{Binding AudioIdInput}"
                 Watermark="e.g., 1684838575"
                 Margin="0,0,0,5"
                 MaxLength="10"
                 FontFamily="Consolas, Courier New, monospace"/>
        <TextBlock Text="{Binding AudioIdError}"
                   Foreground="#D32F2F"
                   TextWrapping="Wrap"
                   IsVisible="{Binding AudioIdError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   FontSize="11"
                   Margin="0,0,0,5"/>
        <TextBlock Text="Enter a Unix timestamp (seconds since 1970-01-01). When 'Custom Tonie' is enabled, the program will automatically apply the offset calculation. The folder structure and RFID remain unchanged."
                   FontSize="11"
                   TextWrapping="Wrap"
                   Foreground="#01579B"/>
      </StackPanel>
    </Border>

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,0,0,20">
      <Button Content="_Continue"
              Width="100"
              Margin="5"
              Command="{Binding YesCommand}"
              Click="OnYesClick"/>
      <Button Content="Ca_ncel"
              Width="100"
              Margin="5"
              Command="{Binding NoCommand}"
              Click="OnNoClick"
              IsDefault="True"
              IsCancel="True"/>
    </StackPanel>
  </StackPanel>

</Window>
